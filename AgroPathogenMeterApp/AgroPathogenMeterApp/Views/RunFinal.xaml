<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AgroPathogenMeterApp.Views.RunFinal">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Test Results:"
                   FontSize="Large"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text=""
                   x:Name="boolPath"
                   FontSize="Medium"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text="To save results, please press the save result button below, to see more information about the test, please press the more information button below"
                   FontSize="Medium"
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="Save Result"
                    Clicked="OnSaveResultClicked"
                    HorizontalOptions="Center" />
            <Button Text="More information"
                    Clicked="OnMoreInfoClicked"
                    HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>